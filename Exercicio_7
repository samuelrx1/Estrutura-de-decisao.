#include <iostream>
using namespace std;

int main(){
	
	//Faça um programa que receba um número e que calcule e mostre a tabuada desse número.
	
	int numero;
	
	while(true){
		cout << "Informe um numero: ";
		cin >> numero;
		
		cout << numero <<" x 1: " << numero * 1;
		cout << "\n" << numero <<" x 2: " << numero * 2;
		cout << "\n" << numero <<" x 3: " << numero * 3;
		cout << "\n" << numero <<" x 4: " << numero * 4;
		cout << "\n" << numero <<" x 5: " << numero * 5;
		cout << "\n" << numero <<" x 6: " << numero * 6;
		cout << "\n" << numero <<" x 7: " << numero * 7;
		cout << "\n" << numero <<" x 8: " << numero * 8;
		cout << "\n" << numero <<" x 9: " << numero * 9;
		cout << "\n" << numero <<" x 10: " << numero * 10 << "\n \n";
		
	}
}
