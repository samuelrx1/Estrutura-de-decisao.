#include <iostream>
using namespace std;

int main(){
	
	//Ler 5 números e informar quantos desses eram ímpares.
	
	int numero, impar = 0;
	
	for(int i = 0; i < 5; i++){
		cout << "Digite um numero: ";
		cin >> numero;
		
		if(numero % 2 != 0){
			impar++;
		}
	}
	cout << impar << " numeros sao impares.";
}
